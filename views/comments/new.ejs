<%- include("../partials/header") %>

<div class="container">	
	<p></p>
	<h1 style="text-align: center;">		
		Create New Comment to <%= hotel.name %> 
	</h1>
	<div class="row">
		<div style="width: 35%; margin: 25px auto;">		
			<form action="/hotels/<%= hotel._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-info btn-block">
					Submit
					</button>
				</div>
				<a class="text-info" href="/hotels/<%= hotel._id %>">Go Back</a>
			</form>
		</div>
		
	</div>	
</div>

<%- include("../partials/footer") %>